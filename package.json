{
  "name": "etherfi-desktop",
  "version": "0.0.1",
  "description": "etherfi-desktop application",
  "main": "./src/electron/main.js",
  "private": true,
  "scripts": {
    "dev-server": "webpack serve --mode development --config ./webpack.development.js",
    "dev": "cross-env NODE_ENV=development electron .",
    "preprod": "webpack --mode production --config ./webpack.production.js",
    "prod": "cross-env NODE_ENV=production electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --universal",
    "run": "osascript -e 'tell app \"Terminal\" to do script \"cd ~/Code/etherfi-desktop && npm run dev-server\"' && npm run dev",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "buildcli": "src/scripts/bundle_proxy_linux.sh",
    "buildcliwin": "src/scripts/bundle_proxy_win.bat"
  },
  "build": {
    "productName": "etherfi-desktop",
    "appId": "com.etherfi.etherfi-desktop",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "target": [
        "pkg"
      ],
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GadzeFinance/etherfi-desktop.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GadzeFinance/etherfi-desktop/issues"
  },
  "homepage": "https://github.com/GadzeFinance/etherfi-desktop#readme",
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/tmp": "^0.2.3",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^22.1.0",
    "electron-builder": "^23.1.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@apollo/client": "^3.7.6",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@chakra-ui/react": "^2.4.9",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@graphql-codegen/cli": "^2.16.5",
    "@graphql-codegen/typescript-operations": "^2.5.13",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "bn": "^1.0.5",
    "elliptic": "^6.5.4",
    "ethers": "^5.7.2",
    "framer-motion": "^8.5.4",
    "node-pty": "^0.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "tmp": "^0.2.1",
    "xterm": "^5.1.0",
    "zod": "^3.20.2"
  }
}
